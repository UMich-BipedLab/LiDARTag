<launch>
    <include file="$(find lidartag)/launch/lidartag_master.launch" output="screen" />

    <group ns="lidartag">
        <param name="mark_cluster_validity" type="bool" value="true" />
        <!-- list for marker sizes -->
        <rosparam param="tag_size_list"> [0.61]</rosparam>

        <!-- Tunable for PoI clustering -->
        <param name="nearby_factor" type="double" value="4" />
        <param name="linkage_tunable" type="double" value="0.5" />

        <!-- Tunable for cluster validation -->
        <param name="max_outlier_ratio" type="double" value="0.15" />

        <param name="pcl_visualize_cluster" type="bool" value="false" />
        <node pkg="rviz" type="rviz" name="rviz" args="-d $(find lidartag)/rviz/lidartag.rviz" respawn="true"/>
    </group>
</launch>
